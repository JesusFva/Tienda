@{
    ViewData["Title"] = "Home Page";
    @model tienda.Models.Usuario;

}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->

</head>
<body>
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-one-third" style="border: 2px solid #4BC765; box-shadow: 0 0 10px rgba(75, 199, 101, 1);">
                    <h1 class="title">Iniciar Sesión</h1>
                    @using (Html.BeginForm("Index", "Usuario", FormMethod.Post, null))
                    {
                        <div class="field">
                            @Html.Label("Usuario", null, new { @class = "label" })
                            <div class="control">
                                @Html.TextBoxFor(m => m.Correo, "Ingrese su correo electronico", new { @class = "input", @type = "email" })
                            </div>
                        </div>
                        <div class="field">
                            @Html.Label("Contraseña", null, new { @class = "label" })
                            <div class="control">
                                @Html.TextBoxFor(m => m.Pass, "Ingrese su correo electronico", new { @class = "input", @type = "password" })
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <nav class="breadcrumb is-right" aria-label="breadcrumbs">
                                    <ul>
                                        <button class="button is-success">Success</button>
                                        <li style="padding-top: 10px;"><a onclick="redirectToAction()">Registrate</a></li>
                                        <li style="padding-top: 10px;"><a href="#">Olvide mi contraseña</a></li>
                                    </ul>
                                </nav>
                                
                                
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </section>


</body>
<script>
    function redirectToAction() {
        window.location.href = '@Url.Action("Index", "CrearUsuario")'; 
    }
</script>