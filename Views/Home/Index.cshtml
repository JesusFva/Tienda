@{
    ViewData["Title"] = "Home Page";
    @model tienda.Models.Usuario;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->
  
</head>
<body>
    
        <section class="section">
            <div class="container">
                <div class="columns is-centered">
                    <div class="column is-one-third">
                        <h1 class="title">Iniciar Sesión</h1>
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "column is-half" }))
                    {
                        <div class="field">
                            @Html.Label("Usuario",null,new{@class="label"})
                            <div class="control">
                                @Html.TextBoxFor(m=>m.Correo,"Ingrese su correo electronico", new{@class="input",@type="email"})
                            </div>
                        </div>
                        <div class="field">
                            @Html.Label("Contraseña", null, new { @class = "label" })
                            <div class="control">
                                @Html.TextBoxFor(m => m.Contraseña, "Ingrese su correo electronico", new { @class = "input", @type = "password" })
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button class="button is-success">Success</button>
                            </div>
                        </div>
                        
                    }
                           
                         
                     
                    </div>
                </div>
            </div>
        </section>
    

</body>
